{% extends 'base.html.twig' %}

{% set pageTitle = 'Details' %}

{% block body %}
    <div class="row">
        <div class="col-xl-12">
            <div class="card shadow mb-4">
                <div
                    class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold">{{ unit.EinheitMastrNummer | default('NotFound') }} am {{ ymd }}</h6>
                </div>
                <div class="card-body">
                    {% for key, value in unit %}
                        {{ key }}: <strong>{{ value }}</strong><br>
                    {% endfor %}
                    <strong>
                </div>
            </div>
        </div>
    </div>
{% endblock %}