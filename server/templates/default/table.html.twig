{% extends 'base.html.twig' %}

{% set pageTitle = 'Table' %}

{% block stylesheets %}
    <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="/js/demo/datatables-demo.js"></script>
{% endblock %}

{% block body %}
    <div class="row">

        <div class="col-xl-12">
            <div class="card shadow mb-4">
                <div
                    class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold">Solar Einheiten</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Zip</th>
                                <th>Activated</th>
                                <th>Gross Power</th>
                                <th>Net Power</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for unit in units %}
                            <tr>
                                <td>
                                    <a href="{{ path('app_detail', {ymd: ymd, city: city, mastr: unit.EinheitMastrNummer }) }}
">{{ unit.EinheitMastrNummer }}</a>
                                </td>
                                <td>{{ unit.NameStromerzeugungseinheit }}</td>
                                <td>{{ unit.Postleitzahl }}</td>
                                <td>{{ unit.Inbetriebnahmedatum }}</td>
                                <td>{{ unit.Bruttoleistung }}</td>
                                <td>{{ unit.Nettonennleistung }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}